<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
<session-factory>
<property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
<property name="connection.url">jdbc:mysql://localhost/newyear</property>
<property name="connection.username">root</property>
<property name="connection.password">mysql123</property>
<property name="hbm2ddl.auto">update</property>
<property name="dialect">org.hibernate.dialect.MySQL57Dialect</property>
<property name="show_sql">true</property>
<mapping class="com.maven.Studnet"></mapping>
<mapping class="com.maven.Address"></mapping>
<mapping class="com.maven.Certificate"></mapping>
</session-factory>
</hibernate-configuration>